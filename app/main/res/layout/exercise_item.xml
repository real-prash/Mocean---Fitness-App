<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/exerciseNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="45sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/workoutSets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sets: "
            android:layout_below="@id/exerciseNameTextView"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/workoutSetsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_toEndOf="@id/workoutSets"
            android:layout_below="@id/exerciseNameTextView"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/workoutReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reps: "
            android:layout_below="@id/workoutSets"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/workoutRepsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_toEndOf="@id/workoutReps"
            android:layout_below="@id/workoutSetsValue"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/exerciseID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="0sp"
            android:text=""/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>