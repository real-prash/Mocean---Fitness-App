<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- EditText. -->
    <style name="default_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">30dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <!-- RadioButton. -->
    <style name="default_radio_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonTint">@android:color/white</item>
    </style>

    <!-- TextView header. -->
    <style name="default_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">70sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <!-- Rounded layout-width button. -->
    <style name="default_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Workout buttons. -->
    <style name="workout_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:height">80dp</item>
    </style>

    <!-- Text left of radio group. -->
    <style name="default_radio_text_inline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <!-- Linear layout for most activities, centered. -->
    <style name="default_linear_layout">
        <item name="android:layout_width">600dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- Relative layout for most activities, the skeleton of all pages. -->
    <style name="default_activity_relative_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Navigation bar ImageButtons. -->
    <style name="navigation_bar_image_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/secondary_color</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Progress bar TextView -->
    <style name="progress_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Progress bar circle. -->
    <style name="progress_circle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_circle</item>
    </style>

    <!-- Spinner for drop down menus. -->
    <style name="default_spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Spinner theme to have underline and arrow be white -->
    <style name="spinner_theme">
        <!-- Color when pressed -->
        <item name="colorAccent">@color/white</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- Profile text. -->
    <style name="profile_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- Text left of EditText. -->
    <style name="default_edit_text_inline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <!-- Update profile linear layouts for inputs -->
    <style name="update_linear_layout_inline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

</resources>
